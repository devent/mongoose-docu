% hyphenation for code
\DeclareTextFontCommand{\hytexttt}{\ttfamily\hyphenchar\font=45\relax}
%
\newcommand{\AutoLabel}[2][empty]{\ifthenelse{\equal{#1}{empty}}{\label{ex:#2}}{\label{ex:#1}}}
\newcommand{\AutoRef}[2][empty]{\ifthenelse{\equal{#1}{empty}}{\ref{ex:#2}}{\ref{ex:#1}}}
% Different formats
% Operator
\newcommand{\initmarginpar}[1]{\leavevmode\marginpar{\flushright{#1}}\ignorespaces}
\definecolor{OperatorColor}{named}{MediumBlue}
\newcommand{\TheOperator}[2][empty]{\AutoLabel[#1]{#2}\initmarginpar{\textcolor{OperatorColor}{\ttfamily\bfseries#2}}}
\newcommand{\Operator}[1]{{\hytexttt\bfseries#1}}
\WithSuffix\newcommand\Operator*[2][empty]{\Operator{#2} (\AutoRef[#1]{#2})}
% Command   
\definecolor{CommandColor}{named}{MediumBlue}
\newcommand{\TheCommand}[2][empty]{\AutoLabel[#1]{#2}\initmarginpar{\textcolor{CommandColor}{\ttfamily\bfseries#2}}}
\newcommand{\Command}[1]{{\ttfamily\bfseries#1}}
\WithSuffix\newcommand\Command*[2][empty]{\Command{#2} (\AutoRef[#1]{#2})}
% Variable
\definecolor{VariableColor}{named}{MediumBlue}
\newcommand{\TheVariable}[2][empty]{\AutoLabel[#1]{#2}\initmarginpar{\textcolor{VariableColor}{\ttfamily\bfseries#2}}}
\newcommand{\Variable}[1]{{\ttfamily\bfseries#1}}
\WithSuffix\newcommand\Variable*[2][empty]{\Variable{#2} (\AutoRef[#1]{#2})}
% Exception
\definecolor{ExceptionColor}{named}{MediumBlue}
\newcommand{\TheException}[2][empty]{\AutoLabel[#1]{#2}\marginpar{\textcolor{TypeColor}{\begin{flushright}\ttfamily\bfseries#2\end{flushright}}}}
\newcommand{\TheExceptionLine}[1]{\initmarginpar{\textcolor{ExceptionColor}{\ttfamily\bfseries#1}}}
\newcommand{\Exception}[1]{{\itshape#1}}
\WithSuffix\newcommand\Exception*[2][empty]{\Exception{#2} (\AutoRef[#1]{#2})}
% Type
\definecolor{TypeColor}{named}{MediumOrchid}
\newcommand{\TheType}[2][empty]{\AutoLabel[#1]{#2}\marginpar{\textcolor{TypeColor}{\begin{flushright}\ttfamily\bfseries#2\end{flushright}}}}
\newcommand{\TheTypeLine}[1]{\initmarginpar{\textcolor{TypeColor}{\ttfamily\bfseries#1}}}
\newcommand{\Type}[1]{{\itshape{\small #1}}}
\WithSuffix\newcommand\Type*[2][empty]{\Type{#2} (\AutoRef[#1]{#2})}
% Types
\newcommand{\TypeStream}{\textsc{\TypeStreamName}\xspace}
\newcommand{\TypeFile}{\textsc{\TypeFileName}\xspace}
\newcommand{\TypeReturnValue}{\textsc{\TypeReturnValueName}\xspace}
\newcommand{\TypeGenericObject}{\textsc{\TypeGenericObjectName}\xspace}
\newcommand{\TypeTrue}{\textit{true}\xspace}
\newcommand{\TypeFalse}{\textit{false}\xspace}
% Propery
\newcommand{\Property}[1]{\code{#1}}
%%%%
% variable typewriter font
\newcommand\textvtt[1]{{\normalfont\fontfamily{cmvtt}\selectfont #1}\xspace}
% code
\newcommand{\code}[1]{\hytexttt{\bfseries #1}}
\newcommand{\qcode}[1]{\hytexttt{\bfseries ``#1''}}
% arguments
\definecolor{ArgsColor}{named}{Green}
\newcommand{\Arg}[1]{\textit{\textcolor{ArgsColor}{#1}}}
